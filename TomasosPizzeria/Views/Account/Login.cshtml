@model  LoginViewModel

@{ 
    ViewBag.Title = "User Login";
}
    <div class="div1">
        <img src="~/images/pizza-pasta.png" style="width:100%" />
    </div>
<hr />
<h1 class="display-4" style="text-align:center;">Logga in</h1>
<hr />

<div class="form-group row">
    <div class="col-sm-10">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" style="position: relative;left: 65px;display: block;"></div>

            <div class="form-group" style="text-align:center;">
                <label asp-for="Email" style="position:relative;left:70px;"></label>
                <input asp-for="Email" class="form-control-sm" style="position:relative;left:92px;" />
                <br />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:center;">
                <label asp-for="Password" style="position:relative;left:65px;"></label>
                <input asp-for="Password" class="form-control-sm" style="position:relative;left:80px;" />
                <br />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:center;">
                <div class="custom-checkbox" style="position:relative;left:100px;">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="position:relative;left:700px;">Logga in</button>
        </form>
    </div>
</div>